<!--    app:layout_constraintEnd_toEndOf="parent" />-->

    <!-- Ganti kalender dengan gambar statis (screenshot kalender) -->
    <ImageView
        android:id="@+id/calendarView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/calende"
        android:scaleType="fitCenter"
        android:contentDescription="Kalender Booking"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Bagian Booking Hari Ini -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center"
        android:background="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/calendarView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/textBookingDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Booking untuk 8 Desember"
            android:textColor="#001F3F"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/textNoBooking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tidak ada booking untuk hari ini"
            android:textColor="#888888"
            android:textSize="16sp"
            android:layout_marginBottom="32dp" />

        <Button
            android:id="@+id/btnBuatBooking"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Buat Booking Baru"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:backgroundTint="#001F3F"
            app:cornerRadius="16dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>