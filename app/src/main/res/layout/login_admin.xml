<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#001F3F"
    android:padding="32dp">

    <!-- Ikon Shield Besar -->
    <ImageView
        android:id="@+id/imageShield"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_shield"
        app:tint="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="80dp" />

    <!-- Judul Admin Portal -->
    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin Portal"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/imageShield"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/textSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Masuk ke panel admin"
        android:textColor="#BBBBBB"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/textTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Field Email Admin -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilEmail"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:hint="Email Admin"
        app:hintTextColor="#888888"
        app:boxStrokeColor="#666666"
        app:boxBackgroundColor="#001F3F"
        app:shapeAppearanceOverlay="@drawable/shape_rounded_12dp"
        app:layout_constraintTop_toBottomOf="@id/textSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:textColor="#FFFFFF"
            android:textColorHint="#888888"
            android:text="Masukkan Gmail"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Field Password -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilPassword"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Password"
        app:hintTextColor="#888888"
        app:boxStrokeColor="#666666"
        app:boxBackgroundColor="#001F3F"
        app:shapeAppearanceOverlay="@drawable/shape_rounded_12dp"
        app:endIconMode="password_toggle"
        app:endIconTint="#888888"
        app:layout_constraintTop_toBottomOf="@id/tilEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textColor="#FFFFFF"
            android:textColorHint="#888888"
            android:text="Password"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Tombol Masuk Sebagai Admin (Putih dengan Border Biru) -->
    <Button
        android:id="@+id/btnAdminLogin"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Masuk Sebagai Admin"
        android:textColor="#001F3F"
        android:textSize="18sp"
        android:textStyle="bold"
        android:backgroundTint="#FFFFFF"
        app:strokeColor="#001F3F"
        app:strokeWidth="2dp"
        app:cornerRadius="28dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/tilPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Kembali ke Login Mahasiswa -->
    <TextView
        android:id="@+id/textBackToStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kembali ke Login Mahasiswa"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnAdminLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

</androidx.constraintlayout.widget.ConstraintLayout>