<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    android:layout_marginBottom="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/textLapangan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Lapangan 1"
                android:textColor="#001F3F"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pending"
                android:textColor="#FF9800"
                android:textSize="14sp"
                android:background="@drawable/bg_status_orange"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                app:cornerRadius="20dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/textTanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanggal : 17 Desember 2025"
            android:textColor="#333333"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/textWaktu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Waktu : 14.00 - 16.00"
            android:textColor="#333333"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/textAcara"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Acara : Olahraga"
            android:textColor="#333333"
            android:textSize="14sp" />

        <!-- Tombol Aksi -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btnTolak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tolak"
                android:textColor="#D32F2F"
                android:backgroundTint="#FFFFFF"
                app:strokeColor="#D32F2F"
                app:strokeWidth="2dp"
                app:cornerRadius="20dp"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:layout_marginEnd="12dp" />

            <Button
                android:id="@+id/btnSetujui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Setujui"
                android:textColor="#FFFFFF"
                android:backgroundTint="#4CAF50"
                app:cornerRadius="20dp"
                android:paddingStart="24dp"
                android:paddingEnd="24dp" />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>